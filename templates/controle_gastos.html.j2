<div class="container mt-5">
    <div class="card card-custom no-print">
        <div class="card-header bg-white">
            <h5 class="card-title" style="color: #d81b60;">Controle de Gastos</h5>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-3">
                    <label for="contratoSelect" class="form-label">Contrato</label>
                    <select class="form-select" id="contratoSelect">
                        <option selected disabled value="">Selecione o Contrato</option>
                        {% for contrato in contratos %}
                        <option value="{{ contrato.id }}" data-tipo="{{ contrato.tipo }}">{{ contrato.nome }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="loteSelect" class="form-label">Lote</label>
                    <select class="form-select" id="loteSelect" disabled>
                        <option selected disabled value="">Selecione o Lote</option>
                    </select>
                </div>
                
                <div class="col-md-3">
                    <label for="casaInput" class="form-label">Casa</label>
                    <input type="text" class="form-control" id="casaInput" readonly>
                </div>
                <div class="col-md-3">
                    <label for="tipoInput" class="form-label">Tipo</label>
                    <input type="text" class="form-control" id="tipoInput" readonly>
                </div>
            </div>
            <div class="d-grid gap-2 d-md-flex justify-content-md-start mt-3">
                <button type="button" class="btn btn-custom" id="selecionarBtn" disabled>Visualizar Gastos</button>
                <button type="button" onclick="window.print()" class="btn-acao" id="imprimirBtn" disabled>
                    <i class="material-icons me-1" style="vertical-align: middle;">print</i> Imprimir/Salvar PDF
                </button>
            </div>
        </div>
    </div>

    <h3 class="mt-5" style="color: #d81b60;">Resumo de Gastos</h3>
    <div class="table-responsive">
        <table class="table table-striped table-hover table-custom">
            <thead>
                <tr>
                    <th scope="col">Código do produto</th>
                    <th scope="col">Descrição</th>
                    <th scope="col">Quantidade restante</th>
                    <th scope="col">Valor total restante</th>
                </tr>
            </thead>
            <tbody id="tabela-corpo">
                <tr><td colspan="4" class="text-center">Selecione e visualize os dados para impressão.</td></tr>
            </tbody>
        </table>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
    const lotesMap = {{ lotes_map | tojson }};

    document.addEventListener('DOMContentLoaded', function() {
        const contratoSelect = document.getElementById('contratoSelect');
        const loteSelect = document.getElementById('loteSelect');
        const casaInput = document.getElementById('casaInput');
        const tipoInput = document.getElementById('tipoInput');
        const selecionarBtn = document.getElementById('selecionarBtn');
        const imprimirBtn = document.getElementById('imprimirBtn'); // Novo botão
        const tabelaCorpo = document.getElementById('tabela-corpo');

        function resetCampos() {
            casaInput.value = '';
            tipoInput.value = '';
            loteSelect.innerHTML = '<option selected disabled value="">Selecione o Lote</option>';
            loteSelect.disabled = true;
            selecionarBtn.disabled = true;
            imprimirBtn.disabled = true; // Desabilita o Imprimir no reset
            tabelaCorpo.innerHTML = '<tr><td colspan="4" class="text-center">Selecione e visualize os dados para impressão.</td></tr>';
        }

        // 1. EVENTO DE MUDANÇA NO CONTRATO
        contratoSelect.addEventListener('change', async function() {
            const contratoId = this.value;
            const selectedOption = this.options[this.selectedIndex];
            
            resetCampos();
            
            tipoInput.value = selectedOption.dataset.tipo || 'N/A';
            
            const lotes = lotesMap[contratoId] || [];
            
            if (lotes.length > 0) {
                loteSelect.disabled = false;
                lotes.forEach(lote => {
                    const option = document.createElement('option');
                    option.value = lote.id;
                    option.textContent = `Lote ${lote.nome_lote} (${lote.ano})`;
                    option.setAttribute('data-casa', lote.casa);
                    loteSelect.appendChild(option);
                });
            } else {
                loteSelect.innerHTML = '<option selected disabled value="">Nenhum lote associado.</option>';
            }
        });

        // 2. EVENTO DE MUDANÇA NO LOTE (Ativar Botão e preencher Casa)
        loteSelect.addEventListener('change', function() {
            const selectedOption = this.options[this.selectedIndex];
            const casa = selectedOption.dataset.casa;

            casaInput.value = casa || '';
            
            selecionarBtn.disabled = false;
            imprimirBtn.disabled = true; // Desabilita até que os dados sejam carregados
            tabelaCorpo.innerHTML = '<tr><td colspan="4" class="text-center">Clique em "Visualizar Gastos" para carregar os dados.</td></tr>'; 
        });


        // 3. Lógica para carregar os dados de controle de gastos
        selecionarBtn.addEventListener('click', async function() {
            const contratoId = contratoSelect.value;
            const loteId = loteSelect.value;
            
            if (!contratoId || !loteId) {
                alert('Por favor, selecione um Contrato e um Lote primeiro.');
                return;
            }

            selecionarBtn.disabled = true;
            selecionarBtn.textContent = 'Carregando...';
            imprimirBtn.disabled = true;
            tabelaCorpo.innerHTML = ''; 

            try {
                const response = await fetch('/controle_gasto', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ contrato_id: contratoId, lote_id: loteId }) 
                });

                const data = await response.json();

                if (response.ok) {
                    if (data.length > 0) {
                        data.forEach(item => {
                            const novaLinha = document.createElement('tr');
                            novaLinha.innerHTML = `
                                <td>${item.codigo_produto}</td>
                                <td>${item.descricao}</td>
                                <td>${item.quantidade_restante.toFixed(2)}</td>
                                <td>R$ ${item.valor_total_restante.toFixed(2)}</td>
                            `;
                            tabelaCorpo.appendChild(novaLinha);
                        });
                        imprimirBtn.disabled = false; // Habilita o imprimir se houver dados
                    } else {
                        tabelaCorpo.innerHTML = '<tr><td colspan="4" class="text-center">Nenhum produto com nota de empenho neste lote/contrato.</td></tr>';
                        imprimirBtn.disabled = true;
                    }
                } else {
                    alert(`Erro: ${data.error}`);
                    console.error('Erro na resposta:', data.error);
                }
            } catch (error) {
                console.error('Erro de conexão:', error);
                alert('Erro de conexão com o servidor.');
            } finally {
                selecionarBtn.disabled = false;
                selecionarBtn.textContent = 'Visualizar Gastos';
            }
        });
    });
</script>

</body>
</html>