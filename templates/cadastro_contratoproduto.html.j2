<div class="container mt-4">
    <div class="row">
        <div class="col-12 mb-4">
            <h2 class="fw-bold" style="color: var(--primary-color)">Estoque do Contrato</h2>
            <p class="text-muted">Gestão de itens com verificação de Lotes (Relação MTM).</p>
        </div>

        <div class="col-lg-4">
            <div class="card card-custom shadow-sm">
                <div class="card-header-custom">
                    <h5 class="section-title"><i class="fa-solid fa-file-contract me-2"></i>Contrato</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Selecione o Contrato</label>
                        <select class="form-select shadow-sm" id="selectContrato">
                            <option selected disabled value="">Escolha um contrato...</option>
                            {% for contrato in contratos %}
                                {% set lid = "" %}
                                {% set lnome = "Sem Lote Vinculado" %}
                                {% if contrato.lotes_associados and contrato.lotes_associados|length > 0 %}
                                    {% set lid = contrato.lotes_associados[0].lote_id %}
                                    {% set lnome = contrato.lotes_associados[0].lote.nome_lote %}
                                {% endif %}
                                <option value="{{ contrato.id }}" 
                                        data-tipo="{{ contrato.tipo }}" 
                                        data-lote-id="{{ lid }}"
                                        data-lote-nome="{{ lnome }}">
                                    {{ contrato.nome }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>

                    <input type="hidden" id="inputLoteId">

                    <div class="mb-2">
                        <label class="form-label">Lote Associado</label>
                        <span class="info-display" id="loteNomeDisplay">---</span>
                    </div>

                    <div class="debug-monitor">
                        <strong>LOG DE SISTEMA:</strong><br>
                        > Contrato Selecionado: <span id="log-cid" class="text-white">Nenhum</span><br>
                        > Lote Identificado: <span id="log-lid" class="text-info">Aguardando...</span>
                    </div>
                </div>
            </div>

            <div class="card card-custom">
                <div class="card-header-custom">
                    <h5 class="section-title"><i class="fa-solid fa-file-csv me-2"></i>Importação</h5>
                </div>
                <div class="card-body">
                    <form id="uploadForm" class="upload-area">
                        <i class="fa-solid fa-cloud-arrow-up fa-2x mb-2 text-muted"></i>
                        <input type="file" class="form-control mb-3" id="fileUpload" accept=".csv, .xlsx, .xls">
                        <button type="submit" class="btn btn-primary-custom w-100" id="uploadBtn">
                            Importar Planilha
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card card-custom">
                <div class="card-header-custom">
                    <h5 class="section-title"><i class="fa-solid fa-plus me-2"></i>Adicionar Itens</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <label class="form-label">Cód. Produto</label>
                            <input type="text" class="form-control" id="codigoProduto">
                        </div>
                        <div class="col-md-5">
                            <label class="form-label">Descrição</label>
                            <input type="text" class="form-control" id="descricaoProduto">
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Qtd.</label>
                            <input type="number" class="form-control" id="quantidade" value="1">
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">R$ Unit.</label>
                            <input type="number" class="form-control" id="valorUnitario" step="0.01">
                        </div>
                        <div class="col-12 text-end">
                            <button type="button" class="btn btn-primary-custom" id="adicionarItem">
                                Inserir na Lista
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card card-custom overflow-hidden">
                <div class="card-header-custom">
                    <h5 class="section-title">Fila de Processamento</h5>
                    <button class="btn btn-success btn-sm px-4 rounded-pill" id="salvarItens">
                        <i class="fa-solid fa-save me-1"></i> Salvar no Banco
                    </button>
                </div>
                <div class="table-responsive">
                    <table class="table table-custom mb-0">
                        <thead>
                            <tr>
                                <th>Cód</th>
                                <th>Descrição</th>
                                <th>Qtd</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody id="tabela-produtos"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    const fila_produtos = [];

    // Tema
    const themeBtn = document.getElementById('themeBtn');
    themeBtn.addEventListener('click', () => {
        const html = document.documentElement;
        const isLight = html.getAttribute('data-theme') === 'light';
        html.setAttribute('data-theme', isLight ? 'dark' : 'light');
        themeBtn.innerHTML = isLight ? '<i class="fa-solid fa-sun"></i>' : '<i class="fa-solid fa-moon"></i>';
    });

    // LÓGICA DE SELEÇÃO E DIAGNÓSTICO
    document.getElementById('selectContrato').addEventListener('change', function() {
        const opt = this.options[this.selectedIndex];
        const cid = this.value;
        const lid = opt.getAttribute('data-lote-id');
        const lnome = opt.getAttribute('data-lote-nome');

        document.getElementById('loteNomeDisplay').textContent = lnome || '---';
        document.getElementById('inputLoteId').value = lid || '';
        document.getElementById('log-cid').textContent = cid;
        const logLid = document.getElementById('log-lid');
        
        if (lid) {
            logLid.textContent = `ID #${lid} - OK`;
            logLid.className = "text-success fw-bold";
        } else {
            logLid.textContent = "NÃO ENCONTRADO NO BANCO!";
            logLid.className = "text-danger fw-bold";
        }
    });

    // ADICIONAR ITEM À LISTA
    document.getElementById('adicionarItem').addEventListener('click', function() {
        const cod = document.getElementById('codigoProduto').value;
        const desc = document.getElementById('descricaoProduto').value;
        const qtd = parseFloat(document.getElementById('quantidade').value);
        const vlr = parseFloat(document.getElementById('valorUnitario').value);

        if (!cod || !desc || isNaN(qtd)) return alert('Preencha os dados do produto.');

        fila_produtos.push({
            codigo_produto: cod,
            descricao_produto: desc,
            quantidade_max: qtd,
            preco_unitario: vlr
        });

        const row = `<tr><td>${cod}</td><td>${desc}</td><td>${qtd}</td><td>R$ ${(qtd * (vlr || 0)).toFixed(2)}</td></tr>`;
        document.getElementById('tabela-produtos').insertAdjacentHTML('afterbegin', row);
    });

    // SALVAR TUDO
    document.getElementById('salvarItens').addEventListener('click', async function() {
        const cid = document.getElementById('selectContrato').value;
        const lid = document.getElementById('inputLoteId').value;

        if (!cid || !lid) return alert("ERRO: Lote não identificado.");
        if (fila_produtos.length === 0) return alert("Adicione produtos primeiro.");

        this.disabled = true;
        this.innerHTML = "Processando...";

        try {
            const response = await fetch('/contratoproduto', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ 
                    id: parseInt(cid), 
                    lote_id: parseInt(lid), 
                    produtos: fila_produtos 
                })
            });

            if (response.ok) {
                alert("Sucesso!");
                location.reload();
            } else {
                const res = await response.json();
                alert("Erro: " + res.message);
            }
        } catch (e) {
            alert("Erro de conexão.");
        } finally {
            this.disabled = false;
            this.innerHTML = "Salvar no Banco";
        }
    });

    // IMPORTAÇÃO CSV
    document.getElementById('uploadForm').addEventListener('submit', async (e) => {
        e.preventDefault();
        const cid = document.getElementById('selectContrato').value;
        const lid = document.getElementById('inputLoteId').value;
        const file = document.getElementById('fileUpload').files[0];

        if (!cid || !lid || !file) return alert("Selecione contrato e arquivo.");

        const fd = new FormData();
        fd.append('file', file);
        fd.append('contrato_id', cid);
        fd.append('lote_id', lid);

        const btn = document.getElementById('uploadBtn');
        btn.disabled = true;

        try {
            const resp = await fetch('/upload-contratoproduto', { method: 'POST', body: fd });
            const data = await resp.json();
            alert(data.message);
            if (resp.ok) location.reload();
        } catch (e) { alert("Erro no upload"); }
        finally { btn.disabled = false; }
    });
</script>

</body>
