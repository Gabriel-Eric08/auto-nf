<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="fw-bold" style="color: var(--primary-color)">Histórico de Notas Fiscais</h2>
            <p class="text-muted">Consulte e visualize os lançamentos por contrato e lote.</p>
        </div>
    </div>

    <div class="card card-custom p-4">
        <div class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="form-label fw-bold small">Contrato</label>
                <select class="form-select" id="selectContrato">
                    <option selected disabled value="">Selecione...</option>
                    {% for contrato in contratos %}
                    <option value="{{ contrato.id }}" data-tipo="{{ contrato.tipo }}">{{ contrato.nome }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label fw-bold small">Lote</label>
                <select class="form-select" id="selectLote" disabled>
                    <option selected disabled value="">Aguardando Contrato...</option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label fw-bold small">Casa</label>
                <input type="text" class="form-control" id="casaLote" readonly placeholder="-">
            </div>
            <div class="col-md-2">
                <label class="form-label fw-bold small">Tipo</label>
                <input type="text" class="form-control" id="tipoContrato" readonly placeholder="-">
            </div>
            <div class="col-md-2">
                <button class="btn btn-primary-custom w-100" type="button" id="btnListar" disabled>
                    <i class="fa-solid fa-magnifying-glass me-2"></i>Listar
                </button>
            </div>
        </div>
    </div>

    <div class="table-responsive mt-4">
        <table class="table table-modern align-middle">
            <thead>
                <tr>
                    <th class="ps-4">Nome da Nota</th>
                    <th>Data de Emissão</th>
                    <th class="text-center pe-4">Ações</th>
                </tr>
            </thead>
            <tbody id="tabela-notas">
                <tr>
                    <td colspan="3" class="text-center text-muted py-5">
                        <i class="fa-solid fa-filter fa-2xl mb-3 d-block opacity-25"></i>
                        Selecione um contrato e lote para filtrar as notas.
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    const lotesMap = {{ lotes_map | tojson }}; 
    const selectContrato = document.getElementById('selectContrato');
    const selectLote = document.getElementById('selectLote');
    const casaLote = document.getElementById('casaLote');
    const tipoContrato = document.getElementById('tipoContrato');
    const btnListar = document.getElementById('btnListar');
    const tabelaNotas = document.getElementById('tabela-notas');

    function resetLoteELista() {
        selectLote.innerHTML = '<option selected disabled value="">Selecione um lote...</option>';
        selectLote.disabled = true;
        casaLote.value = '';
        tipoContrato.value = '';
        btnListar.disabled = true;
    }

    selectContrato.addEventListener('change', function() {
        const contratoId = this.value;
        const selectedOption = this.options[this.selectedIndex];
        resetLoteELista();
        tipoContrato.value = selectedOption.dataset.tipo || '';
        const lotes = lotesMap[contratoId] || [];
        
        if (lotes.length > 0) {
            selectLote.disabled = false;
            lotes.forEach(lote => {
                const option = new Option(lote.nome_lote, lote.id);
                option.setAttribute('data-casa', lote.casa);
                selectLote.add(option);
            });
        }
    });

    selectLote.addEventListener('change', function() {
        casaLote.value = this.options[this.selectedIndex].dataset.casa || '';
        btnListar.disabled = false;
    });

    btnListar.addEventListener('click', async function() {
        const contratoId = selectContrato.value;
        const loteId = selectLote.value;
        
        btnListar.innerHTML = '<i class="fa-solid fa-spinner fa-spin"></i>';
        btnListar.disabled = true;

        try {
            const url = `/notafiscal/por_contrato/${contratoId}/${loteId}`;
            const response = await fetch(url);
            
            if (response.status === 404) {
                tabelaNotas.innerHTML = '<tr><td colspan="3" class="text-center text-muted py-4">Nenhuma nota encontrada.</td></tr>';
                return;
            }
            
            const notasFiscais = await response.json();
            tabelaNotas.innerHTML = ''; 
            
            notasFiscais.forEach(nota => {
                const tr = document.createElement('tr');
                tr.innerHTML = `
                    <td class="ps-4 fw-medium">${nota.nome_nf}</td>
                    <td><i class="fa-regular fa-calendar-days me-2"></i>${nota.data_emissao}</td>
                    <td class="text-center pe-4">
                        <button class="btn btn-sm btn-outline-custom px-3 btn-visualizar" data-nome-nf="${nota.nome_nf}">
                            <i class="fa-solid fa-eye me-1"></i> Detalhes
                        </button>
                    </td>
                `;
                tabelaNotas.appendChild(tr);
            });

            // Evento Detalhes
            document.querySelectorAll('.btn-visualizar').forEach(button => {
                button.addEventListener('click', async function() {
                    const nomeNf = this.dataset.nomeNf;
                    const res = await fetch('/notafiscal/detalhes', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ nome_nf: nomeNf })
                    });
                    if (res.ok) {
                        const content = await res.text();
                        const win = window.open();
                        win.document.write(content);
                        win.document.close();
                    }
                });
            });

        } catch (error) {
            alert('Erro ao buscar dados.');
        } finally {
            btnListar.innerHTML = '<i class="fa-solid fa-magnifying-glass me-2"></i>Listar';
            btnListar.disabled = false;
        }
    });

    // Dark Mode
    const themeBtn = document.getElementById('themeBtn');
    themeBtn.addEventListener('click', () => {
        const theme = document.documentElement.getAttribute('data-theme') === 'light' ? 'dark' : 'light';
        document.documentElement.setAttribute('data-theme', theme);
        themeBtn.innerHTML = theme === 'light' ? '<i class="fa-solid fa-moon"></i>' : '<i class="fa-solid fa-sun"></i>';
        localStorage.setItem('theme', theme);
    });

    if (localStorage.getItem('theme') === 'dark') {
        document.documentElement.setAttribute('data-theme', 'dark');
        themeBtn.innerHTML = '<i class="fa-solid fa-sun"></i>';
    }
</script>

</body>
</html>