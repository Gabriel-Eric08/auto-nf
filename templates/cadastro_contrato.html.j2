    <style>
        :root {
            --primary-color: #6f42c1;
            --primary-hover: #59359a;
            --accent-color: #a673e8;
            --bg-body: #f8f9fa;
            --card-bg: #ffffff;
            --text-color: #333333;
            --nav-bg: rgba(255, 255, 255, 0.9);
            --transition: all 0.3s ease;
        }

        [data-theme="dark"] {
            --bg-body: #121212;
            --card-bg: #1e1e1e;
            --text-color: #e0e0e0;
            --nav-bg: rgba(30, 30, 30, 0.9);
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--bg-body);
            color: var(--text-color);
            transition: var(--transition);
            /* O padding-top deve ser exatamente a altura da sua navbar */
            padding-top: 85px; 
        }

        /* Navbar Corrigida */
        .navbar-custom {
            background: var(--nav-bg);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            border-bottom: 1px solid rgba(111, 66, 193, 0.1);
            padding: 0.8rem 0;
            /* Garante que ela fique sempre no topo Z-index alto */
            z-index: 1030; 
        }

        .navbar-brand {
            font-weight: 700;
            color: var(--primary-color) !important;
            font-size: 1.4rem;
        }

        .nav-link {
            color: var(--text-color) !important;
            font-weight: 500;
            transition: var(--transition);
            margin: 0 5px;
        }

        /* Dropdowns e Efeitos */
        .dropdown-menu {
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            background-color: var(--card-bg);
            padding: 10px;
        }

        @media (min-width: 992px) {
            .nav-item.dropdown:hover .dropdown-menu {
                display: block;
                margin-top: 0;
            }
        }

        /* Botão de Tema */
        .theme-switch {
            background: var(--primary-color);
            color: white;
            border: none;
            width: 40px;
            height: 40px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
        }

        /* Cards e Tabela (Seus estilos originais) */
        .card-custom {
            background: var(--card-bg);
            border: none;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.05);
            margin-bottom: 2rem;
            overflow: hidden;
        }
        .card-header-custom {
            background: transparent;
            border-bottom: 1px solid rgba(111, 66, 193, 0.1);
            padding: 1.5rem;
        }
        .card-title { font-weight: 700; color: var(--primary-color); margin: 0; }
        .form-label { font-weight: 500; font-size: 0.9rem; color: var(--primary-color); }
        .form-control {
            border-radius: 12px;
            padding: 10px 15px;
            background-color: var(--bg-body);
            border: 1px solid rgba(0,0,0,0.05);
        }
        .btn-custom {
            border-radius: 12px;
            padding: 10px 25px;
            font-weight: 500;
        }
        .btn-adicionar { background-color: var(--accent-color); color: white; border: none; }
        .btn-salvar { background-color: var(--primary-color); color: white; border: none; }
        
        /* Choices.js fix */
        .choices__inner { border-radius: 12px !important; background-color: var(--bg-body) !important; border: 1px solid rgba(0,0,0,0.05) !important; }
    </style>
</head>
<body>

