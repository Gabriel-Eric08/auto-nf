<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h2 class="fw-bold" style="color: var(--primary-color)">Gestão de Contratos</h2>
            <p class="text-muted">Cadastre e gerencie a vigência e lotes dos contratos ativos.</p>
        </div>
    </div>

    <div class="card card-custom">
        <div class="card-header-custom">
            <h5 class="card-title"><i class="fa-solid fa-file-signature me-2"></i>Novo Contrato</h5>
        </div>
        <div class="card-body p-4">
            <div class="row g-4">
                <div class="col-md-4">
                    <label class="form-label">Nome do Contrato</label>
                    <input type="text" class="form-control" id="nomeContrato" placeholder="Ex: Contrato 001/2025">
                </div>
                <div class="col-md-4">
                    <label class="form-label">Tipo de Contrato</label>
                    <input type="text" class="form-control" id="tipo" placeholder="Ex: Temporário">
                </div>
                <div class="col-md-2">
                    <label class="form-label">Vigência Inicial</label>
                    <input type="date" class="form-control" id="dataInicial">
                </div>
                <div class="col-md-2">
                    <label class="form-label">Vigência Final</label>
                    <input type="date" class="form-control" id="dataFinal">
                </div>
                <div class="col-12">
                    <label class="form-label">Lotes Associados</label>
                    <select id="lotes" multiple>
                        {% for lote in lotes %}
                        <option value="{{ lote.id }}">{{ lote.nome_lote }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>

            <div class="mt-4 d-flex gap-2">
                <button type="button" class="btn btn-custom btn-adicionar" id="adicionar">
                    <i class="fa-solid fa-plus me-2"></i>Adicionar à Lista
                </button>
                <button type="button" class="btn btn-custom btn-salvar" id="salvar">
                    <i class="fa-solid fa-floppy-disk me-2"></i>Salvar no Sistema
                </button>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col">
            <h4 class="fw-bold mb-4" style="color: var(--primary-color)">Contratos Ativos</h4>
            <div class="table-responsive">
                <table class="table table-custom">
                    <thead>
                        <tr>
                            <th>Contrato</th>
                            <th>Tipo</th>
                            <th>Data Inicial</th>
                            <th>Data Final</th>
                            <th>Lotes</th>
                            <th class="text-center">Ações</th>
                        </tr>
                    </thead>
                    <tbody id="tabela-corpo">
                        {% for contrato in contratos %}
                        <tr>
                            <td class="fw-bold">{{ contrato.nome }}</td>
                            <td><span class="badge bg-light text-dark border">{{ contrato.tipo }}</span></td>
                            <td>{{ contrato.data_inicial.strftime('%d/%m/%Y') if contrato.data_inicial else '--' }}</td>
                            <td>{{ contrato.data_final.strftime('%d/%m/%Y') if contrato.data_final else '--' }}</td>
                            <td>
                                {% for assoc in contrato.lotes_associados %}
                                    <span class="badge rounded-pill" style="background-color: var(--accent-color); color: white;">{{ assoc.lote.nome_lote }}</span>
                                {% endfor %}
                            </td>
                            <td class="text-center">
                                <button class="btn btn-sm btn-outline-primary border-0"><i class="fa-solid fa-eye"></i></button>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/choices.js/public/assets/scripts/choices.min.js"></script>

<script>
    // Seus scripts originais (Choices, Adicionar, Salvar e Theme)
    document.addEventListener('DOMContentLoaded', function() {
        const lotesChoices = new Choices('#lotes', {
            removeItemButton: true,
            placeholderValue: 'Selecione os lotes...',
            itemSelectText: '',
            classNames: { containerInner: 'choices__inner' }
        });

        const nomeContratoInput = document.getElementById('nomeContrato');
        const tipoInput = document.getElementById('tipo');
        const dataInicialInput = document.getElementById('dataInicial');
        const dataFinalInput = document.getElementById('dataFinal');
        const tabelaCorpo = document.getElementById('tabela-corpo');

        const formatarData = (str) => str.split('-').reverse().join('/');

        document.getElementById('adicionar').addEventListener('click', () => {
            const vals = {
                nome: nomeContratoInput.value.trim(),
                tipo: tipoInput.value.trim(),
                ini: dataInicialInput.value,
                fim: dataFinalInput.value,
                lotesIds: lotesChoices.getValue(true),
                lotesLabels: lotesChoices.getValue().map(i => i.label).join(', ')
            };

            if (!vals.nome || vals.lotesIds.length === 0 || !vals.ini || !vals.fim) {
                alert('Preencha todos os campos obrigatórios.'); return;
            }

            const novaLinha = document.createElement('tr');
            novaLinha.setAttribute('data-new', 'true');
            novaLinha.setAttribute('data-lotes-ids', JSON.stringify(vals.lotesIds));
            novaLinha.setAttribute('data-data-inicial', vals.ini);
            novaLinha.setAttribute('data-data-final', vals.fim);

            novaLinha.innerHTML = `
                <td class="fw-bold text-primary">${vals.nome}</td>
                <td><span class="badge bg-light text-dark border">${vals.tipo}</span></td>
                <td>${formatarData(vals.ini)}</td>
                <td>${formatarData(vals.fim)}</td>
                <td>${vals.lotesLabels}</td>
                <td class="text-center text-muted"><i class="fa-solid fa-clock-rotate-left"></i> Aguardando</td>
            `;
            tabelaCorpo.prepend(novaLinha);

            nomeContratoInput.value = ''; tipoInput.value = ''; dataInicialInput.value = ''; dataFinalInput.value = '';
            lotesChoices.clearStore();
        });

        document.getElementById('salvar').addEventListener('click', async function() {
            const linhas = document.querySelectorAll('tr[data-new="true"]');
            if (!linhas.length) return alert('Nenhum contrato novo para salvar.');

            this.disabled = true;
            this.innerHTML = '<i class="fa-solid fa-spinner fa-spin me-2"></i>Salvando...';

            for (const linha of linhas) {
                const payload = {
                    nome: linha.children[0].textContent,
                    tipo: linha.children[1].textContent,
                    data_inicial: linha.getAttribute('data-data-inicial'),
                    data_final: linha.getAttribute('data-data-final'),
                    lotes_ids: JSON.parse(linha.getAttribute('data-lotes-ids'))
                };

                try {
                    await fetch('/contratos/add_only', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(payload)
                    });
                } catch (e) { console.error(e); }
            }
            location.reload();
        });

        const themeBtn = document.getElementById('themeBtn');
        themeBtn.addEventListener('click', () => {
            const html = document.documentElement;
            const isLight = html.getAttribute('data-theme') === 'light';
            html.setAttribute('data-theme', isLight ? 'dark' : 'light');
            themeBtn.innerHTML = isLight ? '<i class="fa-solid fa-sun"></i>' : '<i class="fa-solid fa-moon"></i>';
        });
    });
</script>
</body>
</html>