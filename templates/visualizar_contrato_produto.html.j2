<html lang="pt-br" data-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Visualizar Itens do Contrato | Sec. Mulher PE</title>
    
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <style>
        :root {
            --primary-color: #6f42c1;
            --primary-hover: #59359a;
            --accent-color: #a673e8;
            --bg-body: #f8f9fa;
            --card-bg: #ffffff;
            --text-color: #333333;
            --nav-bg: rgba(255, 255, 255, 0.9);
            --border-color: rgba(111, 66, 193, 0.1);
            --transition: all 0.3s ease;
        }

        /* Correção da Fonte e suavização */
        body { 
            font-family: 'Poppins', sans-serif; 
            font-weight: 300; /* Deixa a letra mais fina/clean */
            background-color: var(--bg-body); 
            color: var(--text-color); 
            padding-top: 95px; /* Evita que a navbar cubra o conteúdo */
            -webkit-font-smoothing: antialiased;
            transition: var(--transition);
        }

        /* Navbar Unificada */
        .navbar-custom {
            background: var(--nav-bg);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            border-bottom: 2px solid var(--primary-color);
            padding: 0.8rem 0;
            z-index: 1030;
        }
        .navbar-brand { font-weight: 700; color: var(--primary-color) !important; font-size: 1.4rem; }
        .nav-link { color: var(--text-color) !important; font-weight: 500; margin: 0 5px; }
        .dropdown-menu { border: none; border-radius: 15px; box-shadow: 0 10px 30px rgba(0,0,0,0.1); padding: 10px; }
        .dropdown-item { border-radius: 8px; padding: 10px 20px; }
        .dropdown-item:hover { background-color: var(--primary-color); color: white !important; }

        /* Cards e Filtros */
        .card-custom {
            background: var(--card-bg);
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.05);
            margin-bottom: 2rem;
        }
        .card-header-custom {
            padding: 1.2rem 1.5rem;
            border-bottom: 1px solid var(--border-color);
            background: transparent;
        }
        .section-title { font-weight: 700; color: var(--primary-color); margin: 0; }

        /* Tabela Estilizada */
        .table-container {
            background: white;
            border-radius: 15px;
            padding: 1rem;
            box-shadow: 0 5px 15px rgba(0,0,0,0.02);
        }
        .table-custom thead th {
            background-color: var(--primary-color) !important;
            color: white !important;
            border: none;
            padding: 12px;
            font-size: 0.85rem;
            text-transform: uppercase;
        }
        .table-custom tbody tr:hover { background-color: #f3effb !important; }
        .table-custom td { padding: 12px; vertical-align: middle; border: none; font-size: 0.85rem; }

        .badge-aditivo {
            background-color: #fff3cd;
            color: #856404;
            font-weight: 600;
            padding: 4px 8px;
            border-radius: 5px;
            font-size: 0.75rem;
        }

        .btn-primary-custom {
            background: var(--primary-color);
            color: white;
            border: none;
            border-radius: 8px;
            padding: 10px 25px;
            font-weight: 500;
            transition: 0.3s;
        }
        .btn-primary-custom:hover { background: var(--primary-hover); transform: translateY(-1px); }
        
        .btn-print { background: #4b4b4b; color: white; border-radius: 8px; padding: 10px 25px; border: none; }

        /* Estilo de Impressão */
        @media print {
            .no-print { display: none !important; }
            body { padding-top: 0; background-color: white; }
            .container { max-width: 100% !important; width: 100% !important; margin: 0 !important; padding: 0 !important; }
            .table-custom thead th { background-color: #eee !important; color: black !important; border: 1px solid #ddd !important; }
            .table-custom td { border: 1px solid #ddd !important; font-size: 8pt !important; }
            .print-only-header { display: block !important; margin-bottom: 20px; border-bottom: 2px solid #000; padding-bottom: 10px; }
        }
        .print-only-header { display: none; }
    </style>
</head>
<body>

<nav class="navbar navbar-expand-lg fixed-top navbar-custom no-print">
    <div class="container">
        <a class="navbar-brand" href="{{ url_for('home.home') }}">
            <i class="fa-solid fa-scale-balanced me-2"></i>Sec. Mulher PE
        </a>
        
        <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <i class="fa-solid fa-bars text-primary"></i>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav mx-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Contratos</a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="{{ url_for('contrato.contratos_page') }}">Cadastrar Contrato</a></li>
                        <li><a class="dropdown-item" href="{{ url_for('contrato_produto.contrato_produto_page') }}">Estoque Contrato</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="{{ url_for('contrato_produto.visualizar_contrato_produto_page') }}">Visualizar Estoques</a></li>
                    </ul>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Notas Fiscais</a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="{{ url_for('nota_fiscal.cadastro_nota_fiscal_page') }}">Lançar Nota</a></li>
                        <li><a class="dropdown-item" href="{{ url_for('nota_fiscal.visualizar_notas_fiscais_page') }}">Histórico</a></li>
                    </ul>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Gestão</a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="{{ url_for('controle_gasto.controle_gasto_page') }}">Controle de Gastos</a></li>
                        <li><a class="dropdown-item" href="{{ url_for('Relatorio.visualizar_relatorio_page') }}">Relatório Geral</a></li>
                    </ul>
                </li>
            </ul>

            <div class="d-flex align-items-center">
                <a href="{{ url_for('Notificacoes.notificaoes_page') }}" class="nav-link px-3"><i class="fa-solid fa-bell"></i></a>
                <div class="dropdown ms-3">
                    <a class="nav-link p-0" href="#" data-bs-toggle="dropdown">
                        <i class="fa-solid fa-circle-user fa-2xl" style="color: var(--primary-color)"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="{{ url_for('auth.login_page') }}">Sair</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</nav>

<div class="container">
    <div class="print-only-header text-center">
        <h4>SECRETARIA DA MULHER DE PERNAMBUCO</h4>
        <h5>Relatório de Itens do Contrato</h5>
        <p>Contrato: {% if contrato_selecionado %}{{ contrato_selecionado.nome }}{% endif %}</p>
    </div>

    <div class="card card-custom no-print">
        <div class="card-header-custom d-flex align-items-center">
            <i class="fa-solid fa-filter me-2 text-primary"></i>
            <h5 class="section-title">Filtros de Consulta</h5>
        </div>
        <div class="card-body">
            <form action="{{ url_for('contrato_produto.visualizar_contrato_produto_page') }}" method="POST">
                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label fw-bold">Selecione o Contrato</label>
                        <select class="form-select shadow-sm" id="selectContrato" name="contrato_id" required>
                            <option selected disabled value="">Escolha...</option>
                            {% for contrato in contratos %}
                            <option value="{{ contrato.id }}" 
                                    data-casa="{{ contrato.casa }}" 
                                    data-tipo="{{ contrato.tipo }}" 
                                    {% if contrato_selecionado and contrato.id == contrato_selecionado.id %} selected {% endif %}>
                                {{ contrato.nome }}
                            </option>
                            {% endfor %}
                        </select>
                    </div>
                    
                    <div class="col-md-4">
                        <label class="form-label fw-bold">Filtrar por Lote</label>
                        <select class="form-select shadow-sm" id="selectLote" name="lote_id">
                            <option value="">Todos os Lotes</option>
                            {% for lote in lotes %}
                            <option value="{{ lote.id }}" {% if lote_id_enviado and lote.id | string == lote_id_enviado | string %} selected {% endif %}>
                                {{ lote.nome_lote }}
                            </option>
                            {% endfor %}
                        </select>
                    </div>

                    <div class="col-md-2">
                        <label class="form-label">Casa</label>
                        <input type="text" class="form-control bg-light" id="casaContrato" readonly value="{% if contrato_selecionado %}{{ contrato_selecionado.casa }}{% endif %}">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Tipo</label>
                        <input type="text" class="form-control bg-light" id="tipoContrato" readonly value="{% if contrato_selecionado %}{{ contrato_selecionado.tipo }}{% endif %}">
                    </div>

                    <div class="col-12 mt-4 d-flex gap-2">
                        <button type="submit" class="btn btn-primary-custom">
                            <i class="fa-solid fa-magnifying-glass me-2"></i>Consultar Itens
                        </button>
                        <button type="button" onclick="window.print()" class="btn btn-print">
                            <i class="fa-solid fa-print me-2"></i>Imprimir Relatório
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="d-flex align-items-center mb-3">
        <div class="bg-primary rounded-circle p-2 me-3 no-print">
            <i class="fa-solid fa-boxes-stacked text-white"></i>
        </div>
        <h4 class="fw-bold mb-0" style="color: var(--primary-color)">Itens Vinculados</h4>
    </div>

    <div class="table-container shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover table-custom">
                <thead>
                    <tr>
                        <th>Cód.</th>
                        <th>Descrição</th>
                        <th>Lote</th>
                        <th class="text-center">Qtd. Original</th>
                        <th class="text-end">Vlr. Unit.</th>
                        <th class="text-end">Total Original</th>
                        <th class="text-center bg-light text-dark">Qtd. +25%</th>
                        <th class="text-end bg-light text-dark">Total +25%</th>
                    </tr>
                </thead>
                <tbody id="tabela-produtos">
                    {% if produtos_contrato %}
                        {% for cp, produto, lote in produtos_contrato %} 
                        <tr>
                            <td class="fw-bold text-primary">{{ produto.nome }}</td>
                            <td class="text-muted">{{ produto.descricao }}</td>
                            <td><span class="badge bg-secondary opacity-75">{{ lote.nome_lote }}</span></td>
                            <td class="text-center">{{ cp.quantidade_max }}</td>
                            <td class="text-end">R$ {{ "%.2f"|format(cp.preco_unitario) }}</td>
                            <td class="text-end fw-bold">R$ {{ "%.2f"|format(cp.quantidade_max * cp.preco_unitario) }}</td>
                            <td class="text-center bg-light"><span class="badge-aditivo">{{ (cp.quantidade_max * 0.25) | int }}</span></td>
                            <td class="text-end bg-light fw-bold text-success">R$ {{ "%.2f"|format((cp.quantidade_max * cp.preco_unitario) * 0.25) }}</td>
                        </tr>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td colspan="8" class="text-center py-5 text-muted">
                                <i class="fa-solid fa-inbox fa-3x mb-3 d-block"></i>
                                Nenhum item encontrado.
                            </td>
                        </tr>
                    {% endif %}
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    document.getElementById('selectContrato').addEventListener('change', function() {
        const opt = this.options[this.selectedIndex];
        document.getElementById('casaContrato').value = opt.dataset.casa || '';
        document.getElementById('tipoContrato').value = opt.dataset.tipo || '';
    });
</script>
</body>
</html>